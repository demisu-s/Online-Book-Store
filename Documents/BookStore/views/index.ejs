<%- include('layouts/header', { includeCss: false }) %>

<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if (message) { %>
      <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
        <strong><%= message.message %></strong>
      </div>
      <% } %>

      <div class="table-responsive">
        <% if (books.length > 0) { %>
        <table class="table table-striped text-center my-3">
          <thead>
            <tr class="table-dark">
              <th>ID</th>
              <th>Title</th>
              <th>Author</th>
              <th>Email</th>
              <th>Phone</th>
              <th>PDF</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% books.forEach((row, index) => { %>
            <tr class="align-middle">
              <td><%= index + 1 %></td>
              <td><%= row.title %></td> 
              <td><%= row.author %></td>
              <td><%= row.email %></td>
              <td><%= row.phone %></td>
              <td>
                <a href="/uploads/<%= row.pdfLink %>" target="_blank">
                  View PDF
                </a>
              </td>
              
              <td>
                <a href="/edit/<%= row._id %>" class="text-seccuss">
                  <i class="fas fa-edit fa-lg mx-1"></i>
                </a>
                <a href="/delete/<%= row._id %>" class="text-danger">
                  <i class="fas fa-trash fa-lg mx-1"></i>
                </a>
              </td>




              
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } else { %>
        <h1 class="text-center text-secondary mt-5">No Books found in the database</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('layouts/footer') %>
