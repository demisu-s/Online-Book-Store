<%-include('layouts/header', { includeCss: false }) %>

<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
      <div class="card shadow">
        <div class="card-header bg-success">
          <h3 class="text-light">Edit Books (<%=book.title %>)</h3>
        </div>
        <div class="card-body p-4">
          <form
            action="/update/<%=book._id %>"
            method="post"
            id="add-form"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="title">Title</label>
              <input
                type="text"
                name="title"
                class="form-control form-control-lg"
                placeholder="Enter book title"
                value="<%= book.title %>"
                required
              />
            </div>
            <div class="mb-3">
                <label for="author">Author</label>
                <input
                  type="text"
                  name="author"
                  class="form-control form-control-lg"
                  placeholder="Enter Author Name"
                  value="<%= book.author %>"
                  required
                />
              </div>
            <div class="mb-3">
              <label for="email">Email</label>
              <input
                type="email"
                name="email"
                class="form-control form-control-lg"
                placeholder="Enter Email"
                value="<%=book.email %>"
                required
              />
            </div>
            <div class="mb-3">
              <label for="phone">Phone</label>
              <input
                type="tel"
                name="phone"
                class="form-control form-control-lg"
                placeholder="Enter phone number"
                value="<%=book.phone %>"
                required
              />
            </div>
            <div class="mb-3">
              <label for="pdf" class="form-label">Select PDF</label>
              <input
                class="form-control form-control-lg"
                type="file"
                name="pdf"
              />
              <img src="/<%= book.pdf %>" width="100" class="img-thumbnail mt-1" />
            </div>
            <input type="hidden" name="old_image" value="<%= book.pdf %>">
            <div class="mb-3 d-grid">
              <input
                type="submit" 
                name="submit"
                value="Update Book"
                class="btn btn-success btn-lg"
              />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%-include('layouts/footer') %>
